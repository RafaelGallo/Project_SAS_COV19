# Imagem base do Python
FROM python:3.10-slim

# Configura√ß√µes b√°sicas
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    TZ=America/Sao_Paulo

# Instalar depend√™ncias do sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    unzip \
    wget \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# Diret√≥rio de trabalho dentro do container
WORKDIR /app

# Copiar requirements e instalar depend√™ncias
COPY requirements.txt .
RUN pip install --upgrade pip && pip install -r requirements.txt

# Copiar os arquivos do projeto (ETL e depend√™ncias)
COPY . .

# Criar pastas necess√°rias para ETL
RUN mkdir -p /app/data /app/output /app/ETL

# Comando padr√£o: executar o pipeline ETL
CMD ["python", "main.py"]
